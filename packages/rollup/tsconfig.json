{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",  // 关键配置：指定 JSX 编译方式（根据 React 版本选择）
    "jsxImportSource": "react", // 明确指定 JSX 运行时来源
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    // "declaration": true,
    // "declarationDir": "dist/types",
    // "outDir": "dist",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}